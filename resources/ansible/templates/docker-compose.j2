version: '3.8'
services:
  gitlab:
    image: 'gitlab/gitlab-ce:{{ gitlab_version }}'
    hostname: '{{ hostname }}'
    environment:
      GITLAB_OMNIBUS_CONFIG: |
{% for extra_opt in extra_conf %}
        {{ extra_opt }}
{% endfor %}
    ports:
      - '22:22'
      - '80:80'
      - '443:443'
    volumes:
      - '$GITLAB_HOME/config:/etc/gitlab'
      - '$GITLAB_HOME/logs:/var/log/gitlab'
      - '$GITLAB_HOME/data:/var/opt/gitlab'
    restart: always
{% if json_max_file %}
    logging:
      driver: 'json-file'
      options:
        max-size: '{{ json_max_file }}'
{% endif %}
